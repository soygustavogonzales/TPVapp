.sales
	md-toolbar.md-primary
		h1.md-toolbar-tools Ventas
	md-content
		form#frmVentas(form-list layout="row" layout-sm="column" layout-padding  name="frmVentas" novalidate)
			section(flex="100")
				section(layout-sm="column")
						md-autocomplete.search-article(
							flex-gt-lg="99" flex-lg="99" flex-gt-md="99" flex-gt-sm="99" flex-sm="99"
							md-search-text="articulo"
							md-search-text-change="change(articulo)"
							placeholder="Busca el articulo"
							md-items="item in querySearch(articulo)"
							md-item-text="item.display"
							md-selected-item-change="selectedItemChange(item)"
						)
							span(md-highlight-text="articulo" md-highlight-flags="^i") {{item.display}}
						md-input-container(flex-gt-lg="99" flex-lg="99" flex-gt-md="99" flex-gt-sm="99" flex-sm="99")
							input.hide(maxlength="30" md-maxlength="30" type="text" required name="articulo" ng-model="articulo")
							ng-messages(for="frmVentas.articulo.$error")
								ng-message(when="required") Escriba el articulo
								ng-message(when="md-maxlength") No se permite mas de 30 caracteres
				section(layout="row" layout-sm="column")
						md-input-container(flex-gt-md="20" flex-sm="99")
							label Cantidad
							input(type="number" min="1" max="99" required name="cantidad" ng-model="cantidad")
							ng-messages(for="frmVentas.cantidad.$error")
								ng-message(when="required") Un numero
								ng-message(when="max") Maximo 99 unidades
								ng-message(when="min") Minimo 1 unidad
						md-input-container(flex-gt-md="20" flex-sm="99")
							label Precio
							input(disabled name="precio" ng-model="precio")
						md-input-container(flex-gt-md="60" flex-sm="99")
							label Descripcion
							textarea(maxlength="300" md-maxlength="300" placeholder="Comentario sobre este articulo o venta espec√≠fica" columns="0" name="descripcion" ng-model="descripcion")
				section(layout="row" layout-align="end start")
					md-button(ng-click="addFormArticle()") Agregar otro articulo
		section(layout="row" layout-align="center center")
			md-button.md-raised.md-primary(ng-disabled="isValid()" ng-click="showConfirmBuy($event)") Vender
